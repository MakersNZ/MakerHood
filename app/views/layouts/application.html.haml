!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'

    %title= content_for?(:title) ? yield(:title) : "#makerhood"
    %meta{ name: "description", content: "#{ content_for?(:description) ? yield(:description) : "#MakerHood" }"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = stylesheet_link_tag "//cdn.jsdelivr.net/editor/0.1.0/editor.css"
    = javascript_include_tag "//cdn.jsdelivr.net/editor/0.1.0/editor.js"
    = javascript_include_tag "//cdn.jsdelivr.net/editor/0.1.0/marked.js"

    = csrf_meta_tags
    = javascript_include_tag '//npmcdn.com/imagesloaded@4.1/imagesloaded.pkgd.min.js'

    = google_webfonts_init({google: ['Catamaran:400,500,700,900']})

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-75630237-1', 'auto');
      ga('send', 'pageview');

  %body
    #main_nav.navbar.navbar-default.navbar-static-top
      .container-fluid
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.fa.fa-bar
          %span.fa.fa-bar
          %span.fa.fa-bar
        = link_to root_url, :class => "navbar-brand" do
          &#35;makerhood
        %ul.nav.navbar-nav
          %li
            = link_to page_path('about') do
              About

  = yield :banner



  #main_content{ class: 'container-fluid' }
    = yield

    %footer
